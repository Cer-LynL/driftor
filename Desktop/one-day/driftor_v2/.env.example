# Environment Configuration
ENVIRONMENT=development

# Security Keys (MUST be changed in production)
SECRET_KEY=your-secret-key-here-minimum-32-characters
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-base64
JWT_SECRET_KEY=your-jwt-secret-key-here-minimum-32-chars
# Vault removed for local development - using direct environment variables

# Database Configuration
DATABASE_URL=postgresql+asyncpg://driftor:secure_password@localhost:5432/driftor
DB_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=secure_redis_password

# Vector Database Configuration
VECTOR_DB__TYPE=chromadb
VECTOR_DB__HOST=localhost
VECTOR_DB__PORT=8000
VECTOR_DB__SSL=false
VECTOR_DB__AUTH_TOKEN=secure_chroma_token

# Monitoring Configuration
GRAFANA_PASSWORD=admin

# Enterprise Features
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_ENCRYPTION=true
ENABLE_RATE_LIMITING=true
ENABLE_IP_WHITELISTING=false

# Rate Limiting (requests per minute)
RATE_LIMIT_JIRA=100
RATE_LIMIT_GITHUB=5000
RATE_LIMIT_SLACK=100
RATE_LIMIT_TEAMS=100

# Data Retention (days)
RETENTION_ANALYSIS_RESULTS=90
RETENTION_CODE_SNIPPETS=30
RETENTION_CHAT_HISTORY=365
RETENTION_AUDIT_LOGS=2555

# Integration Settings
JIRA_WEBHOOK_SECRET=your-jira-webhook-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
TEAMS_APP_SECRET=your-teams-app-secret

# LLM Configuration
LLM_PROVIDER=ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# OpenAI Fallback (optional)
OPENAI_API_KEY=your-openai-api-key

# Compliance Settings
GDPR_COMPLIANCE_MODE=true
SOC2_COMPLIANCE_MODE=true
AUDIT_ALL_ACTIONS=true
DATA_RESIDENCY_REGION=EU

# Network Security
ALLOWED_IPS=0.0.0.0/0
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
WEBHOOK_TIMEOUT_SECONDS=30

# Enterprise SSO (optional)
ENABLE_SAML_SSO=false
SAML_METADATA_URL=https://your-idp.com/metadata
SAML_ENTITY_ID=driftor

ENABLE_OIDC_SSO=false
OIDC_DISCOVERY_URL=https://your-idp.com/.well-known/openid_configuration
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret